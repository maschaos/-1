#include <iostream>
using namespace std;

int main() {
	int a;
	setlocale(0, "");
	cout << "Программа 'Времена года'" << endl;
	cout << "Выберите время года." << endl;
	cout << "" << endl;
	cout << "[1]" << "Лето." << endl;
	cout << "[2]" << "Осень." << endl;
	cout << "[3]" << "Зима." << endl;
	cout << "[4]" << "Весна." << endl;

	if (a == 1) {
		cout << "Лето. Стоить пить больше воды." << endl;

	}
	else if (a == 2) {
		cout << "Сейчас осень, следует одеться тепло и взять с собой зонт." << endl;

	}
	else if (a == 3) {
		cout << "Сейчас зима, следует одеться тепло и взять перчатки" << endl;
	}
	else if (a == 4) {
		cout << "Сейчас весна, нужно надеть резиновые сапоги." << endl;
	}
	else {
		cout << "Ошибка ввода" << endl;
	}

	return 0;
}
