#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int number;
	int count = 0;
	int sum = 0;

	do {
		cout << "[] Введите чиcло: ";
		cin >> number;

		if (number != 0) {
			count++;
			sum += number;
		}
	} while (number != 0);

	cout << "[] Количество чисел: " << count << endl;
	cout << "[] Сумма" << count << endl;

	return 0;
}
